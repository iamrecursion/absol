// Need to update grammar to reflect the above
name : simple_test;

version : 0.0.1a;

using : {
    number,
    base
};

truths : {
    {integer n <= <integer>},
    {floating n <= <floating-point>}
};

language : {

<<simple_test>> ::= <statement> ;

// Semantics only required for expressions containing terminals
<my-number> ::= <integer> | <floating> ; // from imports, implicit semantics

<arith-expr> ::= <my-number> | <arith-op> ;

<arith-op> ::= 
    <arith-expr> "+" <arith-expr> --> {
        number n : {n = n1 + n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    } |
    <arith-expr> "-" <arith-expr> --> {
        number n : {n = n1 - n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    } |
    <arith-expr> "*" <arith-expr> --> {
        number n : {n = n1 * n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    } |
    <arith-expr> "/" <arith-expr> --> {
        number n : {n = n1 / n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    } |
    <arith-expr> "^" <arith-expr> --> {
        number n : {n = n1 ^ n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]} |
        number n : {n = n1 * n1}(n2 == 2) :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    };

<identifier> ::= <nondigit> { <integer> | <nondigit> };

<statement> ::= <arith-expr> | <assignment> ;

// Defaults to returning the assigned value unless suppressed with 'none'
<assignment> ::= <identifier> "=" <arith-expr> --> {
    none e <-- <identifier>[0] : <arith-expr>[0]
};

};
