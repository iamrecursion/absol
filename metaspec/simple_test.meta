name : simple_test;

version : 0.0.1a;

using : {
    number,
    base,
    traverse
};

// These don't need to look like this. All of the special feature terminations
// can be taken as given but still need to be manually written -> users may want
// to specify their own semantics.
truths : {
    {integer n <= <integer>},
    // {floating n <= <floating>},
    {number n <= <number>}
};

language : {

<<simple_test>> ::= <statement> ;

// <statement> ::= <arith-expr> | <assignment> ;
<statement> ::= <my-number> | <number> ;

<my-number> ::= <integer> ;

// Semantics only required for expressions containing terminals

<arith-expr> ::= <my-number> | <arith-op> ;

<arith-op> ::= 
//     <arith-expr> "+" <arith-expr> --> {
//         number n : {n = n1 + n2}() :
//             {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
//     } |
//     <arith-expr> "-" <arith-expr> --> {
//         number n : {n = n1 - n2}() :
//             {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
//     } |
//     <arith-expr> "*" <arith-expr> --> {
//         number n : {n = n1 * n2}() :
//             {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
//     } |
//     <arith-expr> "/" <arith-expr> --> {
//         number n : {n = n1 / n2}() :
//             {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
//     } |
    <arith-expr> "^" <arith-expr> --> {
        number n : {n = n1 ^ n2}() :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]} |
        number n : {n = n1 * n1}(n2 == 2) :
            {number n1 <= <arith-expr>[0]}, {number n2 <= <arith-expr>[1]}
    };

